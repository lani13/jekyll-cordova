		</headerContent>
		<content>
		  <Bar>
		    <contentMiddle>
			  <Label text="" class="sapUiSmallMarginBottom" />
			</contentMiddle>
			<contentRight>
			  <!--<BusyIndicator id="busyIndicator" size="2em"/>
			  <Button id="showDocButton" type="Accept" text="Pobierz" press="onDocPress" />-->
			</contentRight>
		  </Bar>
		  <ScrollContainer
		    id="scrollContainer"
		    height="100%"
		    width="100%"
		    horizontal="false"
		    vertical="true"
		    focusable="true">
	      </ScrollContainer>
		</content>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>